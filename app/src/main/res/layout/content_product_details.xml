<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tech.thrithvam.partyec.ProductDetails"
    tools:showIn="@layout/app_bar_product_details">
    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="BallClipRotateMultipleIndicator"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:indicatorColor="@color/colorAccent"
        android:id="@+id/loading_indicator"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/product_details_scroll_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/wishlist"
                android:tint="@color/colorAccent"
                android:onClick="toggleWishlist"
                android:id="@+id/is_fav_image"
                android:layout_gravity="end"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:id="@+id/previous_image"
                        android:src="@drawable/previous"
                        android:tint="@color/colorAccent"
                        android:layout_centerVertical="true"/>
                <com.wang.avi.AVLoadingIndicatorView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:indicatorName="BallScaleIndicator"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    app:indicatorColor="@color/colorAccent"
                    android:id="@+id/image_loading"
                    />
                    <ImageView
                        android:id="@+id/next_image"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:layout_gravity="end"
                        android:src="@drawable/next"
                        android:tint="@color/colorAccent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/next_image"
                    android:layout_toStartOf="@+id/next_image"
                    android:layout_toRightOf="@+id/previous_image"
                    android:layout_toEndOf="@+id/previous_image"
                    android:id="@+id/product_image_area">
                <AdapterViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/product_images"
                    android:clickable="true"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/sticker"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/primary_text"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="12sp"
                android:id="@+id/product_name"
                android:gravity="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="rateProduct">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier Name"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp"
                    android:id="@+id/supplier_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"/>
                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:layout_width="100dp"
                    android:id="@+id/avg_rating_bar"
                    android:layout_height="20dp"
                    android:isIndicator="true"
                    android:stepSize="0.1"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    app:mrb_progressTint="#FFF9DB01"
                    app:mrb_progressBackgroundTint="#FFF9DB01"
                    app:mrb_secondaryProgressTint="#FFF9DB01"
                    android:numStars="5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_it"
                    android:textColor="@color/colorAccent"
                    android:layout_below="@id/avg_rating_bar"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingRight="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="13sp"
                    android:onClick="rateProduct"/>
            </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:text="Short Description"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/short_description"
        android:textSize="16sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/price_n_stock">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock availability"
        android:textColor="@color/secondary_text"
        android:padding="5dp"
        android:layout_alignBottom="@+id/price"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/stock_availability"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="product details"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/product_detail_specs"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/price"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/product_detail_specs"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actual Price"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/price"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:id="@+id/actual_price"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Delivery"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/actual_price"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:id="@+id/free_delivery"/>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="end"
    android:animateLayoutChanges="true"
    android:padding="5dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:text="@string/add_to_cart"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button"
                    android:onClick="addToCart"
                    android:id="@+id/add_to_cart"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:text="Buy/Book/Request Quote"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button"
                        android:onClick="buyProduct"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/action_button"/>
</LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:padding="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"/>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/web_view_description"
        android:layout_margin="5dp"
        android:padding="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/other_attributes_linear"
                android:gravity="center"
                android:padding="5dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:padding="5dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"/>
                </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:padding="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rating_reviews_label">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="@string/ratings_amp_reviews"
                android:textAllCaps="false"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate_it"
                android:textColor="@color/colorAccent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:textSize="13sp"
                android:onClick="rateProduct"/>
 </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ratings_linear"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/reviews_linear"/>
            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallPulseIndicator"
                app:indicatorColor="@color/colorAccent"
                android:id="@+id/loading_indicator_ball_pulse"
                android:visibility="visible"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_all_reviews"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:id="@+id/view_all_reviews"
                android:visibility="gone"
                android:layout_gravity="end"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:padding="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"/>
    <TextView
        android:id="@+id/related_products_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:text="@string/related_items"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        android:textStyle="bold" />
            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallPulseIndicator"
                app:indicatorColor="@color/colorAccent"
                android:id="@+id/loading_indicator_ball_pulse2"
                android:visibility="visible"
                android:layout_gravity="center"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/related_products_horizontal"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_all_related_items"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:id="@+id/view_all_related_items"
                android:visibility="gone"
                android:layout_gravity="end"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>

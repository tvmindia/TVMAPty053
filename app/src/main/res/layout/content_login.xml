<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tech.thrithvam.partyec.Login"
    tools:showIn="@layout/app_bar_login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    android:id="@+id/user_image"
    android:src="@drawable/user"
    android:layout_centerHorizontal="true"
    android:layout_margin="15dp"
    android:scaleType="fitCenter"/>

    <EditText
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_email"
        android:layout_below="@id/user_image"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:maxLines="1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="@string/login_signup"
        android:padding="7dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:shadowColor="@color/secondary_text"
        android:background="@drawable/button"
        android:onClick="emailEnteredClick"
        android:id="@+id/login_signup"/>
    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="BallPulseIndicator"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:indicatorColor="@color/colorAccent"
        android:id="@+id/loading_indicator"
        android:layout_below="@+id/email"
        android:visibility="invisible"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/login_description"
        android:layout_below="@+id/login_signup"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        android:paddingTop="7dp"
        android:id="@+id/login_description"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:id="@+id/signup_form"
        android:visibility="invisible">
        <EditText
            android:layout_width="wrap_content"
            android:minWidth="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/name_m"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:id="@+id/name"
            android:inputType="textPersonName"
            android:maxLines="1"/>
        <EditText
            android:layout_width="wrap_content"
            android:minWidth="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/phone_m"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:id="@+id/mob_no"
            android:inputType="phone"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/gender"
            android:gravity="center"
            android:paddingBottom="10dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:id="@+id/radio_male"
                android:checked="true"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female"
                android:id="@+id/radio_female"/>
        </RadioGroup>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="SignUp"
            android:padding="7dp"
            android:textColor="@android:color/white"
            android:shadowColor="@color/secondary_text"
            android:background="@drawable/button"
            android:onClick="signUp"
            android:id="@+id/signup_button"/>
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallPulseIndicator"
            app:indicatorColor="@color/colorAccent"
            android:id="@+id/loading_indicator2"
            android:visibility="invisible"
            />
    </LinearLayout>
                </RelativeLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/product_image"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:id="@+id/product_name"
            android:layout_toRightOf="@+id/product_image"
            android:layout_toEndOf="@id/product_image"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B_NO"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:id="@+id/booking_No"
            android:layout_toRightOf="@+id/product_image"
            android:layout_toEndOf="@id/product_image"
            android:layout_below="@id/product_name"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/required_dates"
            android:textColor="@color/primary_text"
            android:textSize="13sp"
            android:id="@+id/required_Date"
            android:layout_toRightOf="@+id/product_image"
            android:layout_toEndOf="@+id/product_image"
            android:layout_below="@id/booking_No"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/booking_dates"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:id="@+id/booking_Date"
            android:layout_toRightOf="@+id/product_image"
            android:layout_toEndOf="@+id/product_image"
            android:layout_below="@id/required_Date"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/booking_status"
            android:textColor="@color/primary_text"
            android:textSize="13sp"
            android:id="@+id/booking_status"
            android:layout_toRightOf="@+id/product_image"
            android:layout_toEndOf="@+id/product_image"
            android:layout_below="@id/booking_Date"
            />
    </RelativeLayout>
</LinearLayout>
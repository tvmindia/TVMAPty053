<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dim_icon"
            android:id="@+id/product_image"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_image"
            android:layout_toEndOf="@id/product_image"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:id="@+id/product_name"
                android:maxLines="1"
                android:ellipsize="end"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attributes"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"
                android:id="@+id/attributes"
                android:paddingBottom="5dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp"
                    android:id="@+id/quantity"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toLeftOf="@+id/price"
                    android:layout_toStartOf="@+id/price"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_display_2"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:id="@+id/price"
                    android:paddingTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shipping_charge"
                    android:textColor="@color/primary_text"
                    android:textSize="13sp"
                    android:id="@+id/shipping"
                    android:paddingBottom="3dp"
                    android:layout_below="@id/price"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tax_amount"
                    android:textColor="@color/primary_text"
                    android:textSize="13sp"
                    android:id="@+id/tax_amount"
                    android:paddingBottom="3dp"
                    android:layout_below="@id/shipping"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_amount"
                    android:textColor="@color/primary_text"
                    android:textSize="13sp"
                    android:id="@+id/total_amount"
                    android:paddingBottom="3dp"
                    android:layout_below="@id/tax_amount"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>